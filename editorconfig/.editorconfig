root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
spaces_around_operators	= true
quote_type = double
curly_bracket_next_line	= false

[*.{c,cc,cpp,h,hh,hpp}]
indent_size = 2

[*.md]
insert_final_newline = false
