{
    // Editor Settings
    "explorer.confirmDelete": false,
    "files.autoGuessEncoding": true,
    "files.trimFinalNewlines": true,
    "explorer.confirmDragAndDrop": false,
    "notebook.lineNumbers": "on",
    "workbench.enableExperiments": false,
    "workbench.settings.enableNaturalLanguageSearch": false,
    "terminal.integrated.fontFamily": "MesloLGS Nerd Font",
    "editor.smoothScrolling": true,
    "extensions.ignoreRecommendations": true,
    "telemetry.telemetryLevel": "off",
    "typescript.surveys.enabled": false,
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "window.openFoldersInNewWindow": "on",
    "workbench.fontAliasing": "auto",
    "workbench.list.smoothScrolling": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "smooth",
    "editor.minimap.autohide": true,
    "editor.guides.bracketPairs": true,
    "editor.autoClosingOvertype": "always",
    "editor.formatOnType": true,
    "editor.linkedEditing": true,
    // "editor.suggest.preview": true, // potentially visually conflicts with inline hint
    "editor.suggest.snippetsPreventQuickSuggestions": false, // enable intellisense after selecting autocomplete
    "editor.acceptSuggestionOnEnter": "smart", // accept suggestions on enter only if it makes a textual change
    "editor.suggest.localityBonus": true,
    "editor.stickyScroll.enabled": true,
    "editor.experimental.pasteActions.enabled": true, // enable paste as picture functionality in markdown
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.enableFileLinks": "off",  // suspicious: may slow down your remote shell
    "git.openRepositoryInParentFolders": "never",
    "window.commandCenter": true,
    "workbench.iconTheme": "vscode-icons",
    "update.mode": "none",
    "workbench.editorAssociations": {
        "*.pdf": "latex-workshop-pdf-hook"
    },
    "markdown.extension.list.indentationSize": "inherit",
    "workbench.cloudChanges.autoResume": "off",
    "workbench.cloudChanges.continueOn": "off",
    "workbench.startupEditor": "none",
    "workbench.colorTheme": "One Dark Pro",
    "[latex]": {
        "editor.wordWrap": "on",
        "editor.guides.bracketPairs": false,
        "editor.defaultFormatter": "James-Yu.latex-workshop"
    },
    "[typst]": {
        "editor.wordWrap": "on",
    },
    "diffEditor.renderSideBySide": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "javascript.inlayHints.parameterNames.enabled": "all",
    "javascript.updateImportsOnFileMove.enabled": "always",
    // Editor ends
    // cpp starts
    "clangd.arguments": [
        "--background-index",
        "--compile-commands-dir=${workspaceFolder}",
        "--clang-tidy",
        "--completion-style=detailed",
        "--header-insertion=none",
        "--pretty"
    ],
    "clangd.fallbackFlags": [
        "-Wall",
        "-Werror",
        "-Wextra",
        "-Wpedantic",
        "-Wvla",
        "-Wextra-semi",
        "-Wnull-dereference",
        "-Wsuggest-override",
        "-Wconversion"
    ],
    "clangd.checkUpdates": true,
    // cpp ends
    // js starts
    "markdown.extension.print.theme": "dark",
    "markdown.updateLinksOnFileMove.enabled": "prompt",
    "markdown.marp.pdf.noteAnnotations": true,
    "markdown.marp.pdf.outlines": "headings",
    // js ends
    // ssh starts
    "remote.SSH.remotePlatform": {
        "csrw2.cs.ucl.ac.uk": "linux",
        "localhost": "linux"
    },
    "remote.SSH.useLocalServer": false,
    // Remote SSH ends
    // git
    "git.ignoreLegacyWarning": true,
    "git.confirmSync": false,
    "git.suggestSmartCommit": false,
    // git ends
    // latex
    "latex-workshop.latex.recipes": [
        {
            "name": "xelatex",
            "tools": [
                "xelatex"
            ]
        },
        {
            "name": "xe*2",
            "tools": [
                "xelatex",
                "xelatex"
            ]
        },
        {
            "name": "xelatex -> bibtex -> xelatex*2",
            "tools": [
                "xelatex",
                "bibtex",
                "xelatex",
                "xelatex"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "%DOC%"
            ]
        },
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ]
        }
    ],
    "latex-workshop.view.pdf.internal.synctex.keybinding": "double-click",
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.autoClean.run": "onBuilt",
    // latex ends
    // Vim Start
    "vim.hlsearch": true,
    "vim.startInInsertMode": true,
    "vim.vimrc.enable": true,
    "vim.smartRelativeLine": true,
    "vim.easymotion": true,
    "vim.leader": ",",
    "vim.foldfix": true,
    "vim.easymotionKeys": "abcdefghijklmnopqrstuvwxyz",
    "vim.camelCaseMotion.enable": true,

    // make the vscode vim more like mine
    // Affected: easy-motion, CamelCaseMotion
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["f"],
            "after": ["leader", "leader", "s"]
        },
        {
            "before": ["leader", "/"],
            "after": ["leader", "leader", "/"]
        },
        {
            "before": ["leader", "k"],
            "after": ["leader", "leader", "k"]
        },
        {
            "before": ["leader", "j"],
            "after": ["leader", "leader", "j"]
        },
        {
            "before": ["w"],
            "after": ["leader", "w"]
        },
        {
            "before": ["e"],
            "after": ["leader", "e"]
        },
        {
            "before": ["b"],
            "after": ["leader", "b"]
        },
        {
            "before": ["g", "r"],
            "commands": [
                "editor.action.goToReferences",
            ],
            "silent": true
        }
    ],
    // Vim end
    // python
    "python.experiments.enabled": false,
    "python.testing.pytestEnabled": true,
    "python.analysis.typeCheckingMode": "basic",
    "jupyter.experiments.enabled": false,
    "python.formatting.provider": "black",
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.linting.prospectorEnabled": true,
    "python.terminal.activateEnvironment": false,
    // python end
    // cmake configuration
    "cmake.configureOnOpen": true,
    // cmake ends
    // clang format
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    // clang format ends
    // tabnine starts
    "tabnine.experimentalAutoImports": false,
    // tabnine ends
    // lldb starts
    "lldb.launch.terminal": "integrated",
    // lldb ends
    // sync settings starts
    "syncSettings.resources": [
        "extensions",
        "keybindings",
        "settings",
    ],
    // sync settings ends
}
