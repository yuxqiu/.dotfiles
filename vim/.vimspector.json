{
  "adapters": {
    "lldb-vscode": {
      "variables": {
        "LLVM": {
          "shell": "brew --prefix llvm"
        }
      },
      "attach": {
        "pidProperty": "pid",
        "pidSelect": "ask"
      },
      "command": ["${LLVM}/bin/lldb-vscode"],
      "env": {
        "LLDB_LAUNCH_FLAG_LAUNCH_IN_TTY": "YES"
      },
      "name": "lldb"
    }
  },
  "configurations": {
    "Python - Launch": {
      "adapter": "debugpy",
      "filetypes": ["python"],
      "configuration": {
        "name": "Python: Launch",
        "type": "python",
        "request": "launch",
        "cwd": "${cwd}",
        "python": "/opt/homebrew/Caskroom/miniforge/base/bin/python",
        "stopOnEntry": true,
        "debugOptions": [],
        "program": "${file}"
      },
      "breakpoints": {
        "exception":{
          "caught": "",
          "uncaught": "Y"
        }
      }
    },
    "C - Launch": {
      "adapter": "lldb-vscode",
      "filetypes": ["c", "cpp", "objc", "rust"],
      "configuration": {
        "name": "C/Cpp/Rust: Launch current file",
        "request": "launch",
        "stopAtEntry": true,
        "args": [],
        "externalConsole": false,
        "MIMode": "lldb",
        "cwd": "${cwd}",
        "program": "${fileDirname}/${fileBasenameNoExtension}"
      },
      "breakpoints": {
        "exception": {
          "cpp_throw": "",
          "cpp_catch": "",
          "objc_throw": "",
          "objc_catch": "",
          "swift_throw": "",
          "swift_catch": ""
        }
      }
    }
  }
}
